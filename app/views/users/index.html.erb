<h1>All of our Users <%= link_to "New user", new_user_path, class: "btn btn-outline-primary" %></h1>
<div class="container">
  <div class="row justify-content-md-center" style="margin-bottom: 20px;">
    <% @users.each do |user| %>
    <div class="col-4 col-sm-4 col-md-4 col-lg-4 col-xl-3">
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('')">
        <h1><%= link_to user.name, user, class: "card-title btn btn-outline-dark mx-auto" %></h1>     
      </div>
    </div> 
    <% end %>
  </div>
</div>